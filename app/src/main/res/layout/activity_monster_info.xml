<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MonsterInfo">

    <TextView
        android:id="@+id/user_n_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Monster info"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:layout_alignTop="@+id/textView3_m_info"
        android:textColor="@color/cardview_light_background"
        android:textSize="60dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView1_m_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2_m_info"
        android:layout_marginEnd="51dp"
        android:text="Monster Type" />

    <TextView
        android:id="@+id/textView2_m_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:text="Health" />

    <TextView
        android:id="@+id/textView3_m_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2_m_info"
        android:layout_marginStart="40dp"
        android:text="Level" />

</RelativeLayout>